-                }
-            }
+          np->point = MPFR_DECIMAL_POINT;
+          np->fp_ptr = str;
+          np->fp_size = str_len;
         }
-      else
-        /* spec.prec digits in fractional part */
-        {
-          if (np->ip_size == exp - 1)
-            /* the absolute value of the number has been rounded up to a power
